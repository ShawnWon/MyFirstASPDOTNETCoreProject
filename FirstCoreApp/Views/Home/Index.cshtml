@using FirstCoreApp.Models;

@{
    ViewBag.Title = "Home Page";
    List<Users> userlist = ViewBag.listuser;
}

    
<header class="w3-display-container w3-content" style="max-width:1920px;" >
    <img class="w3-image" src="~/lib/Images/bg.jpg" style="min-width:1000px" width="1920" height="1080">
    <div class="w3-display-topleft w3-padding w3-col">
        <div class="w3-container w3-blue">

            <h4><i class="fa fa-star w3-margin-right"></i>Registered User List</h4>
            <span class="float-right" ><input type="button" value="+ Add User" onclick="window.location.href='@Url.Action("AddUserForm","Home")'" class="w3-btn" /></span>

        </div>
        <div class="w3-container w3-white w3-padding-16">
            <div style="overflow-x:auto;">
            <table class="w3-table w3-striped">
                <tr><th>Name</th><th>Email</th><th>Gender</th><th>Date Reg</th><th>Selected Days</th><th>Add Request</th></tr>

                @{ foreach (Users user in userlist)
                    {
                        <tr>
                           
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Gender</td>
                            <td>@user.RegDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @{foreach (CheckboxModel cbm in user.selectedDays)
                                    {
                                        if (cbm.IsChecked)
                                        { <text>@cbm.Text  </text>}
                                }
                                }

                            </td>
                            <td>@user.AddReq</td>

                        </tr>

                        
                    }



                }

            </table>
            </div>

        </div>
    </div>
</header>




